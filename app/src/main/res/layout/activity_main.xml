<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/textView_output"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="9"
            android:text="Waiting..."/>

        <View
            android:id="@+id/indicator_ligth"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/circle"/>
    </LinearLayout>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"

        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/control">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_1"
                android:text="Column 1"/>

            <Button
                android:id="@+id/button_1.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_1.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_2"
                android:text="Column 2"/>

            <Button
                android:id="@+id/button_2.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_2.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_3"
                android:text="Column 3"/>

            <Button
                android:id="@+id/button_3.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_3.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_4"
                android:text="Column 4"/>

            <Button
                android:id="@+id/button_4.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_4.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_5"
                android:text="Column 5"/>

            <Button
                android:id="@+id/button_5.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_5.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_6"
                android:text="Column 6"/>

            <Button
                android:id="@+id/button_6.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_6.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_7"
                android:text="Column 7"/>

            <Button
                android:id="@+id/button_7.1"
                android:text="ON"/>

            <Button
                android:id="@+id/button_7.2"
                android:text="OFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/undo"
                android:layout_column="1"
                android:layout_span="2"
                android:text="undo"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
